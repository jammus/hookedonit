<!DOCTYPE html>
<html>
    <head>
        <script src="http://connect.soundcloud.com/sdk.js"></script>
        <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>

        <script src="//use.typekit.net/ohi3efu.js"></script>
        <script>try{Typekit.load();}catch(e){}</script>
        <script src="/js/lib/lastfm.api.js"></script>
        <script src="/js/lib/lastfm.api.md5.js"></script>
        <link href="/css/main.css" type="text/css" rel="stylesheet" />
    </head>
    <body data-genre="{{ selectedGenre }}">
    <div class="container cf" role="application">
        <aside class="block votes">
            <header>
                <h1 class="logo">Hooked On It.</h1>
            </header>
            <div class="results">
                {{ include('votes.twig') }}
            </div>
        </aside>

        <section class="block fight">
            {{ include('genres.twig') }}
            <p class="prompt adjust">Listen to both songs for 15 seconds.</p>
            <p class="headline adjust">Pick the better song.</p>
            <div class="first track">
                <a class="vote" data-track="first" href="#">
                    <img src="" />
                </a>
                <div class="title"></div>
            </div>
            <div class="second track">
                <a class="vote" data-track="second" href="#">
                    <img src="" />
                </a>
                <div class="title"></div>
            </div>
        </section>
    </div>
    
    <script src="/js/app.js"></script>
    </body>
</html>
